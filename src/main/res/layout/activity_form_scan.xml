<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#80000000"
    android:layout_gravity="center_horizontal"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="150dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/text_bg5"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
             >

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:text="请扫描！" />
            <ImageView
                android:id="@+id/ivExit"
                android:layout_alignParentRight="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/exit" />

        </RelativeLayout>

    <TextView
        android:id="@+id/tvGYBH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="工艺编号："
        android:textSize="15dp"
        android:textColor="@color/text"/>
        <LinearLayout
            android:id="@+id/llGYBH"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:background="@drawable/kuang2">
            <EditText
                android:id="@+id/etGyForm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="请扫描工艺条码！"
                android:gravity="center"
                android:layout_height="30dp"
                android:singleLine="true"
                android:background="@null"/>


        </LinearLayout>
        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="工艺名称："
            android:textSize="15dp"
            android:textColor="@color/text"/>
        <LinearLayout
            android:visibility="gone"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:background="@drawable/kuang1">
            <TextView
                android:id="@+id/tvGyName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="30dp"
                android:singleLine="true"
                android:background="@null"/>


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="工作票编号："
            android:textSize="15dp"
            android:textColor="@color/text"/>
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:background="@drawable/kuang2">
            <EditText
                android:id="@+id/etGpForm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="请扫描工票条码！"
                android:gravity="center"
                android:layout_height="30dp"
                android:singleLine="true"
                android:background="@null"/>
        </LinearLayout>


         <Button 
            android:id="@+id/btnNext"
            android:layout_width="100dp"
            android:layout_height="40dp"
             android:layout_gravity="center"
             android:padding="5dp"
             android:layout_marginTop="10dp"
            android:textColor="@color/text"
            android:background="@drawable/text_bg3"
            android:text="下一步"/>

    </LinearLayout>
</LinearLayout>
